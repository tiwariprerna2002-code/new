  <script>
    // create subtle particles
    const particles = document.querySelector('.particles');
    const count = 14;
    for(let i=0;i<count;i++){
      const p = document.createElement('div');
      p.className='particle';
      p.style.left = Math.random()*100 + '%';
      p.style.bottom = Math.random()*60 + 'px';
      p.style.opacity = (0.03 + Math.random()*0.06).toFixed(2);
      p.style.width = (4 + Math.random()*8) + 'px';
      p.style.height = p.style.width;
      p.style.animationDuration = (6 + Math.random()*8) + 's';
      p.style.animationDelay = (Math.random()*-8) + 's';
      particles.appendChild(p);
    }

    // audio controls
    const music = document.getElementById('music');
    const playBtn = document.getElementById('playBtn');
    const pauseBtn = document.getElementById('pauseBtn');
    const vol = document.getElementById('vol');

    playBtn.addEventListener('click', ()=>{
      // try to play; browsers may block autoplay without user gesture
      music.volume = vol.value;
      music.play().catch(()=>{ alert('Browser blocked autoplay — click Play again or interact with page.'); });
    });
    pauseBtn.addEventListener('click', ()=> music.pause());
    vol.addEventListener('input', ()=> music.volume = vol.value);

    // small timed choreography accent: occasional flourish (scale + faster arm)
    const dancers = document.querySelectorAll('.dancer');
    setInterval(()=>{
      dancers.forEach((d,i)=>{
        d.style.transition = 'transform 260ms ease';
        d.style.transform = d.classList.contains('right') ? 'scaleX(-1) translateY(-4px) rotateZ(2deg)' : 'translateY(-4px) rotateZ(-2deg)';
        setTimeout(()=> d.style.transform = '', 260);
      });
      // briefly speed up arm animation by toggling a class
      document.querySelectorAll('.arm-left, .arm-right').forEach(a=>{
        a.style.animationDuration = '0.9s';
        setTimeout(()=> a.style.animationDuration = '', 260);
      });
    }, 7000);

    // accessibility hint: expose play/pause via keyboard
    document.addEventListener('keydown', (e)=>{
      if(e.key === ' '){ // space toggles
        e.preventDefault();
        if(music.paused) music.play(); else music.pause();
      }
      if(e.key === 'p') music.play();
      if(e.key === 'o') music.pause();
    });
  </script>
</body>
